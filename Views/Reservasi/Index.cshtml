@model IEnumerable<ReservasiRuangApp.Models.Reservasi>

@{
    ViewData["Title"] = "Daftar Reservasi";
}

<div class="container">
    <h2 class="text-primary mb-4">Daftar Reservasi Ruangan</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            + Tambah Reservasi
        </a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-primary text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.NamaPemesan)</th>
                <th>@Html.DisplayNameFor(model => model.NamaRuangan)</th>
                <th>@Html.DisplayNameFor(model => model.WaktuMulai)</th>
                <th>@Html.DisplayNameFor(model => model.WaktuSelesai)</th>
                <th>@Html.DisplayNameFor(model => model.Keterangan)</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NamaPemesan)</td>
                    <td>@Html.DisplayFor(modelItem => item.NamaRuangan)</td>
                    <td>@item.WaktuMulai.ToString("dd MMM yyyy HH:mm")</td>
                    <td>@item.WaktuSelesai.ToString("dd MMM yyyy HH:mm")</td>
                    <td>@Html.DisplayFor(modelItem => item.Keterangan)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detail</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Hapus</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
